{
  "name": "the-action-dev",
  "version": "2.0.0",
  "description": "dev.to Posts with GitHub Actions ğŸ§‘â€ğŸ’»",
  "author": "Kaiz Khatri",
  "main": "lib/main.js",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ful1e5/TheActionDev.git"
  },
  "keywords": [
    "dev.to",
    "GitHub",
    "forem",
    "actions",
    "node"
  ],
  "scripts": {
    "clean": "rm -rf lib dist",
    "build": "tsc",
    "rebuild": "yarn clean && yarn build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "pack:dev": "yarn rebuild && yarn package",
    "dev": "yarn pack:dev && act -s DEVTO_API_KEY=$TOKEN -j test-run",
    "action:yarn": "yarn build && yarn format && yarn lint && yarn package && yarn test",
    "action": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "dependencies": {
    "@actions/core": "^1.2.5",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.0",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@types/request-promise": "^4.1.46",
    "@typescript-eslint/parser": "^4.1.0",
    "@vercel/ncc": "^0.24.0",
    "eslint": "^7.8.1",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.9",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
