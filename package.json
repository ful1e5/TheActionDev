{
  "name": "the-action-dev",
  "version": "2.0.0",
  "description": "dev.to Posts with GitHub Actions üßë‚Äçüíª",
  "author": "Kaiz Khatri",
  "main": "lib/main.js",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ful1e5/TheActionDev.git"
  },
  "keywords": [
    "dev.to",
    "GitHub",
    "forem",
    "actions",
    "node"
  ],
  "scripts": {
    "clean": "rm -rf lib dist",
    "build": "tsc",
    "rebuild": "yarn clean && yarn build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "pack:dev": "yarn rebuild && yarn package",
    "dev": "yarn pack:dev && act --secret-file .env -j build",
    "action:yarn": "yarn build && yarn format && yarn package && yarn test",
    "action": "npm run build && npm run format && npm run package && npm test"
  },
  "dependencies": {
    "@actions/core": "^1.2.5",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.0",
    "got": "^11.8.2"
  },
  "devDependencies": {
    "@types/got": "^9.6.12",
    "@types/jest": "^26.0.13",
    "@types/node": "^16.9.4",
    "@vercel/ncc": "^0.24.0",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
}
