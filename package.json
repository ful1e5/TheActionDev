{
  "name": "the-action-dev",
  "version": "2.0.0",
  "description": "dev.to Posts with GitHub Actions",
  "author": "Kaiz Khatri",
  "main": "lib/main.js",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ful1e5/TheActionDev.git"
  },
  "keywords": [
    "dev.to",
    "GitHub",
    "forem",
    "actions",
    "node"
  ],
  "scripts": {
    "clean": "rm -rf lib dist",
    "watch": "ts-node-dev --respawn -- src/main.ts",
    "build": "tsc",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --maxWorker=10 --runInBand",
    "dev": "yarn clean && yarn build && yarn package && yarn test && node dist/index.js"
  },
  "dependencies": {
    "@actions/core": "^1.8.0",
    "@actions/github": "^5.0.1",
    "@actions/glob": "^0.3.0",
    "got": "^11.8.2",
    "yaml": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@vercel/ncc": "^0.33.4",
    "jest": "^26.4.2",
    "jest-circus": "^27.5.1",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
